@model IEnumerable<CatalogOfProducts2.Models.ProductModel>



<div class="jumbotron">
    <h1>Welcome visitor!</h1>
    <p class="lead">

    </p>
    <p><a href="@Url.Action("ViewProducts", "Home")" class="btn btn-primary btn-lg">See more &raquo;</a></p>
</div>

<div class="row">
    <h2>Newly added:</h2>
    @foreach (var item in Model)
    {
        <div class="col-md-4">

            <h3>
                @Html.ActionLink(item.ProductName, "ProductDetails", "Home", new { id = item.ProductId }, new { style = "color:Black;" })
            </h3>
            <p>
                <img src="@Url.Content("~/Images/"+item.ImagePath)" height="200" width="200" onclick="location.href='@Url.Action("ProductDetails", "Home",new {id = item.ProductId })'" />
            </p>


        </div>
    }


</div>
